{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('book_delete', {id: book.id}) }}" method="POST">
                <fieldset>
                    <legend>Delete Post</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="title">Post Title</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="title" placeholder="Post Title"
                                   name="book[title]" value="{{ book.title }}" disabled>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="description">Description</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="content"
                                  name="book[description]" disabled>{{ book.description}}</textarea>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('book_view', {id: book.id}) }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}
