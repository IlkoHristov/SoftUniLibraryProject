{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('book_edit', {id: book.id}) }}" method="POST">
                <fieldset>
                    <legend>Edit Book</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="book_title">Post Title</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="book_title" placeholder="Post Book"
                                   name="book[title]" value="{{ book.title }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="name">Book Author</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="name" placeholder="Book Author"
                                   name="book[name]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="book_description">Content</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="book_description"
                                  name="book[description]">{{ book.description }}</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="book_image">Upload Image</label>
                        <div class="col-sm-4 ">
                            <input accept=".jpg,.jpeg" type="file" class="form-control" id="book_image" placeholder="Upload Image"
                                   name="book[image]">
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('book_view', {id: book.id}) }}">Cancel</a>
                            <button type="submit" class="btn btn-success">Edit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}

